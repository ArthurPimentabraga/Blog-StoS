<%- include ('./partials/header.ejs')%>

<% if(verifySession == undefined) { %>
    <%- include ('./partials/home_navbar.ejs')%>
<% } else { %>
    <%- include ('./partials/navbar.ejs')%>
<% } %>

<main>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="jumbotron">
                    <h1>StoS - Students to Students</h1>
                    <p>Para transmitir meu conhecimento</p>
                    <div class="dropdown">
                        <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">
                            Selecione uma categoria
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/1">Todas</a>
                            <% categories.forEach(category => { %>
                                <a class="dropdown-item" href="/category/<%= category.slug %>"><%= category.title %></a>
                            <% }) %>
                        </div>
                    </div>
                </div>
                <h4><%= slug %></h4><br>
                <div id="flexArticles">
                    <% articles.forEach(article => { %>
                        <div class="card cardArticles">
                            <div class="card-header">
                                <h3><%= article.title %></h3>
                            </div>
                            <div class="card-body">
                                <a href="/article/<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include ('./partials/footer.ejs')%>