<%- include ('./partials/header.ejs')%>

<% if(verifySession == undefined) { %>
    <%- include ('./partials/home_navbar.ejs')%>
<% } else { %>
    <%- include ('./partials/navbar.ejs')%>
<% } %>


<main>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="jumbotron">
                    <h1>StoS - Students to Students</h1>
                    <p>Para transmitir meu conhecimento</p>
                    <div class="dropdown">
                        <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">
                            Selecione uma categoria
                        </button>
                        <div class="dropdown-menu">
                            <% categories.forEach(category => { %>
                                <a class="dropdown-item" href="/category/<%= category.slug %>"><%= category.title %></a>
                            <% }) %>
                        </div>
                    </div>
                </div>
                <div id="flexArticles">
                    <% result.articles.rows.forEach(article => { %>
                        <div class="card cardArticles">
                            <div class="card-header">
                                <h3><%= article.title %></h3>
                            </div>
                            <div class="card-body">
                                <a href="/<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
                            </div>
                        </div>
                    <% }) %>
                </div>
                <div class="row">
                    <div class="col-12">
                        <% if(result.next) { %>
                            <a href="/<%= result.page + 1 %>" class="btn btn-dark" style="float: right;">Next -></a>
                        <% } %>
                        <% if(result.page >= 2) { %>
                            <a href="/<%= result.page - 1 %>" class="btn btn-dark" style="float: left;"><- Previd</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include ('./partials/footer.ejs')%>